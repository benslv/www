---
const { title } = Astro.props;

import Navigation from "../components/Navigation.astro";
import "../styles/global.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title ?? "Ben Silverman"}</title>
		<meta
			name="description"
			content="My personal website. Hopefully always being updated!"
		/>
		<script
			data-goatcounter="https://bensilverman.goatcounter.com/count"
			is:inline
			async
			src="//gc.zgo.at/count.js"></script>
		<link
			rel="icon"
			type="image/png"
			href="/favicon-96x96.png"
			sizes="96x96"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<meta name="apple-mobile-web-app-title" content="Ben Silverman" />
		<link rel="manifest" href="/site.webmanifest" />
	</head>
	<body>
		<Navigation />
		<article>
			{title && <h1>{title}</h1>}
			<slot />
		</article>
	</body>
	<style>
		body {
			display: grid;

			@media screen and (min-width: 768px) {
				grid-template-columns: 180px 1fr 180px;
			}
		}
		article {
			max-width: var(--wrap-width);
			margin: 0 auto;
			padding: 0 1rem;
			padding-top: 2rem;
			width: 100%;
		}
	</style>
</html>
